<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container mt-4">
  <h3>üìÅ All Folders</h3>

  <table class="table table-bordered bg-white">
    <thead>
      <tr>
        <th>Folder Name</th>
        <th>Total PDFs</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% folders.forEach(folder => { %>
        <tr>
          <td><%= folder.name %></td>
          <td><%= folder.files.length %></td>
          <td>
            <a href="/admin/folder/<%= folder._id %>" class="btn btn-sm btn-primary">View</a>
            <a href="/admin/delete-folder/<%= folder._id %>" class="btn btn-sm btn-danger">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

</body>
</html>
