<!DOCTYPE html>
<html>
<head>
  <title><%= folder.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-4">
  <h3>ðŸ“‚ <%= folder.name %></h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>PDF</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% folder.files.forEach(file => { %>
        <tr>
          <td><%= file.originalName %></td>
          <td>
            <a href="/view-pdf/<%= file._id %>" target="_blank" class="btn btn-sm btn-success">View</a>
            <a href="/admin/delete-file/<%= file._id %>" class="btn btn-sm btn-danger">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/admin/dashboard" class="btn btn-secondary">Back</a>
</div>



</body>
</html>
